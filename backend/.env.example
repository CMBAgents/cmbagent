# CMBAgent Backend Environment Variables
# Copy this to .env and fill in your values

# Local dev mode (set to true to skip Firebase auth)
CMBAGENT_LOCAL_DEV=false

# LLM API Keys (at least one required)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
GEMINI_API_KEY=
GOOGLE_API_KEY=
GOOGLE_GEMINI_API_KEY=
MISTRAL_API_KEY=
OPEN_ROUTER_KEY=
PERPLEXITY_API_KEY=
FUTURE_HOUSE_API_KEY=

# Google Cloud (optional - for Vertex AI models)
GOOGLE_CLOUD_PROJECT=your-project-id

# Server configuration
UVICORN_WORKERS=4

# Work directory (inside container)
# Note: This is mounted from ./workdir on the host
CMBAGENT_WORK_DIR=/app/workdir
